{
    "name": "Python and Langchain",
    "image": "python:3.9-buster",
    "customizations": {
        "extensions": [
            "ms-python.python"
        ],
        "settings": {
            "python.pythonPath": "/usr/local/bin/python",
            "terminal.integrated.shell.linux": "/bin/bash"
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "appPort": [
        8000
    ],
    "postCreateCommand": "pip install langchain"
}